{
  "name": "react-grant",
  "version": "0.7.0",
  "description": "Grant Based Access Control",
  "author": "Markus Maga <markus@nadilus.com>",
  "homepage": "https://github.com/flydiverny/react-grant",
  "bugs": {
    "url": "https://github.com/flydiverny/react-grant/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flydiverny/react-grant.git"
  },
  "main": "umd/react-grant.js",
  "module": "es/index.js",
  "files": [
    "umd",
    "es",
    "lib"
  ],
  "scripts": {
    "build": "yarn run build:es && yarn build:commonjs && yarn run build:umd",
    "build:es": "babel src -d es --ignore tests",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src -d lib --ignore tests",
    "build:umd": "cross-env webpack --mode=production",
    "lint": "eslint src",
    "test": "jest --silent",
    "test:watch": "jest --watch --silent",
    "prepublishOnly": "yarn run clean && yarn run lint && yarn run test && yarn run build",
    "clean": "rimraf umd es lib"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "hoist-non-react-statics": "^2.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.2.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "npm:enzyme-react-adapter-future",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "prop-types": "^15.6.1",
    "react": "^16.3.0",
    "react-dom": "^16.4.1",
    "webpack": "^4.3.0",
    "webpack-cli": "^2.0.13"
  },
  "peerDependencies": {
    "prop-types": "^15.6",
    "react": "^16.3",
    "react-dom": "^16.3"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js,jsx,json}": [
        "eslint --fix",
        "prettier --config .prettierrc --write",
        "git add"
      ]
    }
  },
  "jest": {
    "setupFiles": [
      "./src/tests/enzyme.js"
    ]
  }
}
